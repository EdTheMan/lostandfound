
<center>
<%= form_for @item do |f| %>

    <table>
  <tr>
    <th>
    <%= f.label :title %>
    </th>
    <th>
    <%= f.label :description %>
    </th>   
 </tr>

   <tr>
       <td> <%= f.text_field :title %> </td>
       <td> <%= f.text_field :description %> </td>
       <td> <%= f.select :type, options_for_select(%w[book clothing cellphone computer]) %> </td>
  </tr>

 </table>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
</center>