
<center>
<%= form_for @item do |f| %>

    <table>
  <tr>
    <th>
    <%= f.label :title %>
    </th>
    <th>
    <%= f.label :description %>
    </th>   
    <th>
    <%= f.label :type_id %>
    </th>   
 </tr>

   <tr>
    
       <td> <%= f.text_field :title, class: "form-control"%> </td>
       <td> <%= f.text_field :description, class: "form-control"%> </td>
       <td> <%= f.select :type_id, @types.map { |t| [t.title, t.id]} , class: "form-control" %> </td>
  </tr>

 </table>
 <br>
  <p>
    <%= f.submit "Create User", :class =>  "btn btn-success" %>
  </p>
<% end %>
</center>