<br>
<center>
<%= form_tag("/items/search", method: "get", action: "search") do %>
  <%= label_tag ("Search For An Item:") %>
  <br>
  <div class="form-group clearfix">
  <%= label_tag( "title:") %> 
  <%= text_field_tag(:title) %> 
  <br></br>
<%= label_tag( "description:") %> 
<%= text_field_tag(:description) %> 
<br></br>
<%= label_tag( "type:") %> 
<%= select_tag(:type_id, options_for_select(@types.map { |t| [t.title, t.id]})) %>
<br></br>
<%= label_tag( "condition:") %> 
<%= select_tag(:condition, options_for_select([['Any of these conditions (OR)',1],['All of these conditions (AND)',2]])) %> 
<br></br>
  <center> <%= submit_tag("Search",:class => "btn btn-info") %>

   </center>
<% end %>

<br></br>

<center>
<% if @found != nil  %>
   
   <table class ="table table-striped table-bordered table-hover" >
    <caption class = "lead"> Search Results </caption>
  <tr>
    <th>
    <%= label_tag "title" %>
    </th>
    <th>
    <%= label_tag "description" %>
    </th>   
    <th>
    <%= label_tag "type" %>
    </th>   
 </tr>
	<% @found.each do |item| %>
	 <tr>
	<td> <%= link_to "#{item.title}",item_path(:id => item.id) %> </td>
	<td> <%= item.description %> </td>
	<td> <%= item.type.title %> </td>
	 </tr>
	<% end %>
	 </table>
<% end %>


 </center>

<br> </br>
<%= button_to "Go Home", items_path, :method => "get", :class => "btn btn-success" %>
</center>