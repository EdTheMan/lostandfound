<center>

<h1>Listing Lost and Found Items</h1>
 <br>
<table class = "table table-striped table-bordered table-hover">
  <tr class="lead">
    <th>Title</th>
    <th>Description</th>
    <th>Type</th>
    <th colspan="3" text-align='center'>Options</th>
  </tr>
 
  <% @item.each do |item| %>
    <tr class = "initialism">
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= item.type.title %> </td>
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', item_path(item),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br>
  <center>
      <%= button_to "New Item", new_item_path, :method => "get", :class => "btn btn-info"  %>
      <br> </br>
      <%= button_to "Search", item_search_path, :method => "get", :class => "btn btn-success" %>
    </center>

</center>